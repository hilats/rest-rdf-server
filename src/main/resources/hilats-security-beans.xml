<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans.xsd
  http://www.springframework.org/schema/context
  http://www.springframework.org/schema/context/spring-context.xsd"
        >

    <bean id="mongo" class="com.hilats.server.spring.EmbeddedMongoFactoryBean">
        <property name="dbPath" value="./embeddedMongo"/>
    </bean>

    <bean name="securityConfigurer" class="com.hilats.server.spring.TestSecurityConfigurer"/>

    <bean name="myUserService" class="com.hilats.server.spring.jwt.MongoUserService">
        <constructor-arg ref="mongo"/>
        <constructor-arg value="hilats_users"/>
    </bean>

    <bean name="myUserDetailsService" class="com.hilats.server.spring.jwt.HilatsUserDetailsService">
        <constructor-arg ref="myUserService"/>
    </bean>

    <bean name="myTokenAuthenticationService" class="com.hilats.server.spring.jwt.TokenAuthenticationService">
        <constructor-arg value="secret"/>
        <constructor-arg ref="myUserDetailsService"/>
    </bean>

</beans>
