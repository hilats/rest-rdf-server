<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans.xsd
  http://www.springframework.org/schema/context
  http://www.springframework.org/schema/context/spring-context.xsd"
        >

    <bean name="securityConfigurer" class="com.hilats.server.spring.TestSecurityConfigurer"/>

    <bean name="myUserService" class="com.hilats.server.spring.jwt.TestUserService"/>

    <bean name="myTokenAuthenticationService" class="com.hilats.server.spring.jwt.TokenAuthenticationService">
        <constructor-arg value="secret"/>
        <constructor-arg ref="myUserService"/>
    </bean>

</beans>
